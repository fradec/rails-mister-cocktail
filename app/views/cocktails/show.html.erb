<h2 class="text-center"><%= @cocktail.name %></h2>

<div class="d-flex align-items-center flex-column">
  <% @cocktail.doses.each do |dose| %>
    <div class="list-group-item d-flex justify-content-between align-items-center col-6 my-1">
      <span>
        <%= dose.description %> — <%= dose.ingredient.name %>
      </span>
      <span>
        <%= link_to '🗑️', dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </span>
    </div>
  <% end %>
</div>

<hr class="col-6 mt-4">

<div class="d-flex justify-content-center">
  <div class="col-4 ">
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary d-block mt-3' %>
  </div>
