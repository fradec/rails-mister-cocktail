<h2>Cocktail: <%= @cocktail.name %></h2>

<h3>Doses:</h3>

<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> — <%= dose.ingredient.name %> — <%= link_to 'Delete dose', cocktail_dose_path(@cocktail, dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  </li>
<% end %>

<%= link_to 'Back to list', cocktails_path %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
