<div class="parent bg-light">
    <% @cocktails.each do |cocktail| %>
      <div class="card text-center my-3 mx-1 py-5 rounded-pill"
        style="background-image: url('<%= cl_image_path cocktail.photo %>'); background-clip: padding-box; background-size: cover">
        <%= link_to cocktail.name, cocktail_path(cocktail), class: "text-secondary" %>
      </div>
    <% end %>
</div>


